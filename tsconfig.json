{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@section/*": ["./src/section/*"],
      "@store/*": ["./src/store/*"],
      "@public/*": ["./public/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@payment": ["./src/payment/index.ts"],
    }
  },
  "exclude": [
    "cdk",
    "dist",
    "node_modules"
  ]
}
