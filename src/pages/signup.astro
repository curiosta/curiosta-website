---
import SignupForm from "@components/SignupForm";
import Typography from "@components/Typography";
import Layout from "@layouts/Layout.astro";
import { pageTitleDesc } from "content";
---

<Layout
  title={pageTitleDesc.signup.title}
  description={pageTitleDesc.signup.description}
>
  <main>
    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <img
          class="mx-auto h-10 w-auto p-1.5 sm:p-1"
          src="/images/curiosta_logo.png"
          alt="Curiosta"
        />
        <Typography
          tag="h2"
          size="h5/bold"
          variant="primary"
          className="mt-6 text-center  leading-9 tracking-tight"
        >
          Create new account
        </Typography>
      </div>

      <div class="mt-6 mx-auto sm:w-full sm:max-w-md w-11/12">
        <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
          <SignupForm client:load />
        </div>
        <Typography
          size="body1/normal"
          variant={"secondary"}
          className="mt-8 text-center"
        >
          Have an account?
          <a
            href="/login"
            class="font-semibold leading-6 text-app-primary-600 hover:text-app-primary-500"
            >Login here</a
          >
        </Typography>
      </div>
    </div>
  </main>
</Layout>
